<MudCard>
    <MudCardContent>
        @if (QueryResult != null)
        {
            <MudText Typo="Typo.subtitle1">@TableLabel</MudText>
            <MudText Typo="Typo.subtitle2">@TableDescription</MudText>
            <QueryResultInnerTable MetaData=@QueryResult.MetaData Data=@(QueryResult.Data) TableDisplayOptions=@TableDisplayOptions />
        }
        else if (Loading)
        {
            <MudText Typo="Typo.subtitle1">Loading...</MudText>
        }
        else
        {
            <MudText Typo="Typo.subtitle1">No data to display</MudText>
        }
    </MudCardContent>
</MudCard>


