@inherits LayoutComponentBase


<MudThemeProvider Theme="restlessDbTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">RestlessDb</MudText>
        <MudSpacer />
        <MudSwitch Color="Color.Inherit" Class="ma-4" T="bool" CheckedChanged="@(()=>{restlessDbTheme.IsDarkMode = !restlessDbTheme.IsDarkMode;})" Label="Toggle Light/Dark Mode"/>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" aria-label="github" Edge="Edge.End" Target="_blank" Link="https://github.com/stefanhug/RestlessDb"/>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudPaper Class="pa-4 ma-0">
            @Body
        </MudPaper>
    </MudMainContent>
</MudLayout>

@code {
    bool drawerOpen = true;

    private void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }

    public RestlessDbTheme restlessDbTheme = new RestlessDbTheme();
}